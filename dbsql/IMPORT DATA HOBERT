--CREATE TABLE CABANG
CREATE TABLE CABANG(
   ID_CABANG CHAR(3) NOT NULL,
   NAMA_CABANG VARCHAR2(15) NOT NULL,
   ALAMAT_CABANG VARCHAR2(30) NOT NULL,
   TELEPON_CABANG NUMBER NOT NULL,
   PRIMARY KEY(ID_CABANG)
 );
 
INSERT INTO CABANG(ID_CABANG,NAMA_CABANG,ALAMAT_CABANG,TELEPON_CABANG) VALUES ('JKT','JAKARTA','JL. KYAI TAPA',0211234567);
