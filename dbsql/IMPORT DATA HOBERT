-- CREATE TABLE JABATAN
CREATE TABLE JABATAN(
    ID_JABATAN CHAR(6) NOT NULL,
   NAMA_JABATAN VARCHAR2(20) NOT NULL,
   HONOR_JABATAN  NUMBER NOT NULL,
   PRIMARY KEY(ID_JABATAN)
);
 
